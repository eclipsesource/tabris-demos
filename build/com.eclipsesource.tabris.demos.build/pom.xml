<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>
	<prerequisites>
		<maven>3.0.0</maven>
	</prerequisites>

	<groupId>com.eclipsesource</groupId>
	<artifactId>tabris-demos-parent</artifactId>
	<version>3.12.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Tabris Demos</name>

	<properties>
		<!-- Tycho properties -->
		<tycho-version>1.0.0</tycho-version>
		<tycho-groupid>org.eclipse.tycho</tycho-groupid>
		<tycho.showEclipseLog>true</tycho.showEclipseLog>
		<!-- Maven Plugin Versions -->
		<assembly-version>2.4</assembly-version>
		<replacer-version>1.4.1</replacer-version>
		<!-- Project specific properties -->
		<war-filename>demos</war-filename>
		<parent-dir>${basedir}</parent-dir>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<modules>
		<module>../../com.eclipsesource.tabris.demos</module>
		<module>../com.eclipsesource.tabris.demos.feature</module>
		<module>../com.eclipsesource.tabris.demos.product</module>
	</modules>

	<repositories>
		<repository>
			<id>eclipse-milestones</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/eclipse/updates/4.2</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<!-- Enable Tycho -->
			<plugin>
				<groupId>${tycho-groupid}</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>

			<!-- Configure Source Encoding -->
			<plugin>
				<groupId>${tycho-groupid}</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>

			<!-- Configure tycho to use p2 to get the target -->
      <plugin>
        <groupId>${tycho-groupid}</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <version>${tycho-version}</version>
        <configuration>
          <resolver>p2</resolver>
          <pomDependencies>consider</pomDependencies>
          <ignoreTychoRepositories>true</ignoreTychoRepositories>
          <target>
            <artifact>
              <groupId>${project.groupId}</groupId>
              <artifactId>${project.artifactId}</artifactId>
              <version>${project.version}</version>
              <classifier>${project.parent.relativePath}/../../com.eclipsesource.tabris.demos/tabris</classifier>
            </artifact>
            <dependency-resolution>
              <optionalDependencies>ignore</optionalDependencies>
            </dependency-resolution>
          </target>
          <environments>
            <environment>
              <os>linux</os>
              <ws>gtk</ws>
              <arch>x86</arch>
            </environment>
          </environments>
        </configuration>
      </plugin>

			<!-- Configure qualifier replacement -->
			<plugin>
				<groupId>${tycho-groupid}</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<format>yyyyMMdd-HHmm</format>
				</configuration>
			</plugin>

		</plugins>
	</build>
</project>
